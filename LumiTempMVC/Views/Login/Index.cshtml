@{
    ViewData["Title"] = "Pagina de Login";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tela de Login</title>
    <!-- Link para o CSS -->
    <link rel="stylesheet" href="~/css/estilos.css" />
</head>

<body>
    <header>
        <!-- Criando o Cabeçalho com barra de opções -->
        <nav class="menu-opcoes">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">Cadastro de Sensores</a></li>
                <li><a href="EmpresaParceira">Cadastro de Empresas</a></li>
                <li><a href="#">Cadastro de Funcionários</a></li>
                <li><a href="#">Dashboard</a></li>
                <li><a href="#">Sobre</a></li>
            </ul>
        </nav>
    </header>

    <section id="main">
        <section id="painel-login">
            <div class="container-login">
                <h2>Login</h2>
                <form action="login" method="POST">
                    <label for="username">Usuário:</label>
                    <input type="text" id="username" name="username" required>
                    <br>
                    <label for="password">Senha:</label>
                    <input type="password" id="password" name="password" required>
                    <br>
                    <button type="submit">Entrar</button>
                </form>
            </div>
        </section>
    </section>
</body>

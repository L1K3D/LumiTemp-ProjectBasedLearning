<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LumiTempMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/estilos.css" />

</head>
<body>
    <header>
        @if (ViewBag.Logado == true)
        {
            <nav class="menu-opcoes">
                <ul>
                    <li><a asp-area="" asp-controller="EmpresaParceira" asp-action="Index">Empresas Parceiras</a></li>
                    <li><a asp-area="" asp-controller="Funcionario" asp-action="Index">Funcionarios</a></li>
                    <li><a asp-area="" asp-controller="Sensor" asp-action="Index">Sensores</a></li>
                    <li><a asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li><a asp-area="" asp-controller="Sobre" asp-action="Index">Sobre</a></li>
                    <li><a asp-area="" asp-controller="Login" asp-action="LogOff">Logoff</a></li>
                </ul>
            </nav>
        }
        else
        {
            <nav class="menu-opcoes">
                <ul>
                    <li><a asp-area="" asp-controller="Funcionario" asp-action="Create">Cadastrar Funcionario</a></li>
                    <li><a asp-area="" asp-controller="Sobre" asp-action="Index">Sobre</a></li>
                    <li><a asp-area="" asp-controller="Login" asp-action="Index">Login</a></li>
                </ul>
            </nav>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

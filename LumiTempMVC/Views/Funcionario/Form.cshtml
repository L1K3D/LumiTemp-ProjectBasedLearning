@model FuncionarioViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Define o layout compartilhado da página
}

@if (ViewBag.Operacao == "A")
{
    <h2>Alteração de Funcionário</h2>
}
else
{
    <h2>Inclusão de Funcionário</h2>
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/css/estilos.css" /> <!-- Estilo da página -->
    <title>Cadastro de Funcionário</title> <!-- Título da página -->
</head>

<body>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Save" method="post">
                <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

                <div class="form-group">
                    @if (ViewBag.Operacao == "A")
                    {
                        <label class="control-label">Código</label>
                        <input asp-for="id" class="form-control disabled" readonly />
                        <span asp-validation-for="id" class="text-danger"></span>
                    }
                </div>

                <!-- Ação que será chamada ao submeter o formulário -->
                <h2>Cadastro de Funcionario</h2> <!-- Título do formulário -->

                <div class="form-group">
                    <label for="id" class="control-label">Código da Empresa</label>
                    <!--<input type="number" id="id" name="id" value="@Model.id" required /> <!-- Campo para o código da empresa -->
                    @if (ViewBag.Operacao == "I")
                    {
                        <input type="number" name="Id" value="@Model.id" class="form-control" />
                    }
                    else
                    {
                        <input type="number" name="Id" value="@Model.id" class="form-control disabled" readonly />
                    }
                    <span asp-validation-for="id" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label for="login_func" class="control-label">Login</label>
                    <input type="text" id="login_func" name="login_func" value="@Model.login_func" /> <!-- Campo para o código da empresa -->
                    <span asp-validation-for="login_func" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="senha_func" class="control-label">senha</label>
                    <input type="password" id="senha_func" name="senha_func" value="@Model.senha_func" /> <!-- Campo para o CEP -->
                    <span asp-validation-for="senha_func" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="dt_cadr" class="control-label">data cadastro</label>
                    <input type="text" id="dt_cadr" name="dt_cadr" value="@Model.dt_cadr.ToString("yyyy-MM-dd")" /> <!-- Campo para o CNPJ -->
                    <span asp-validation-for="dt_cadr" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Salvar Dados" class="btn btn-white" /> <!-- Botão para submeter o formulário -->
                </div>

                <div class="form-group">
                    <h2><a href="/Funcionario">Página Inicial</a></h2> <!-- Link para a página inicial -->
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar para a listagem</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>